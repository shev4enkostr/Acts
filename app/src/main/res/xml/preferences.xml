<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory>
        android:title="@string/pref_category_general"
        android:key="pref_category_general"

        <SwitchPreference
            android:key="pref_enable_history"
            android:title="@string/pref_enable_history_title"
            android:summary="@string/pref_enable_history_summary"
            android:defaultValue="false"/>

        <SwitchPreference
            android:key="pref_use_token"
            android:title="@string/pref_use_token_title"
            android:summary="@string/pref_use_token_summary"
            android:defaultValue="false"/>
    </PreferenceCategory>
</PreferenceScreen>